{
  "openapi": "3.0.3",
  "info": {
    "title": "커피 키오스크 API",
    "description": "키오스크·백오피스·마이페이지 API. 인증 필요 엔드포인트는 Authorize에 JWT를 입력하세요.",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:3001", "description": "로컬 개발" }
  ],
  "tags": [
    { "name": "Health", "description": "헬스체크" },
    { "name": "Auth", "description": "인증 (회원가입·로그인·아이디/비밀번호 찾기)" },
    { "name": "User", "description": "마이페이지 (JWT 필요)" },
    { "name": "Admin", "description": "관리자 전용 (JWT + ADMIN)" },
    { "name": "Categories", "description": "카테고리" },
    { "name": "Menu", "description": "메뉴(상품)" },
    { "name": "MenuBoard", "description": "메뉴판 (키오스크용)" },
    { "name": "Orders", "description": "주문" }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "tags": ["Health"],
        "summary": "헬스체크",
        "responses": {
          "200": { "description": "DB 연결 정상", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/HealthResponse" } } } },
          "500": { "description": "DB 오류" }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "회원가입",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "username", "email", "password"],
                "properties": {
                  "name": { "type": "string" },
                  "username": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 6 }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "가입 성공", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/RegisterResponse" } } } },
          "400": { "description": "필수값 누락 또는 비밀번호 6자 미만" },
          "409": { "description": "username 또는 email 중복" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "로그인 (JWT 발급)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LoginResponse" } } } },
          "400": { "description": "username, password 필수" },
          "401": { "description": "invalid username or password" }
        }
      }
    },
    "/api/auth/find-id": {
      "post": {
        "tags": ["Auth"],
        "summary": "아이디 찾기 (성함+이메일)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email"],
                "properties": { "name": { "type": "string" }, "email": { "type": "string" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "type": "object", "properties": { "username": { "type": "string" } } } } } },
          "400": { "description": "name, email required" },
          "404": { "description": "no user found" }
        }
      }
    },
    "/api/auth/find-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "비밀번호 찾기 (임시 비밀번호 발급, 성공 여부만 반환)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "username", "email"],
                "properties": { "name": { "type": "string" }, "username": { "type": "string" }, "email": { "type": "string" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "type": "object", "properties": { "success": { "type": "boolean" } } } } } },
          "400": { "description": "name, username, email required" },
          "404": { "description": "no user found" }
        }
      }
    },
    "/api/user/me": {
      "get": {
        "tags": ["User"],
        "summary": "내 정보 (포인트·마일리지·설정)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserMe" } } } },
          "401": { "description": "Unauthorized" },
          "404": { "description": "user not found" }
        }
      }
    },
    "/api/user/orders": {
      "get": {
        "tags": ["User"],
        "summary": "내 주문 내역",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "status", "in": "query", "schema": { "type": "string", "enum": ["ALL", "CANCELED", "WAITING", "COMPLETED", "PENDING"] }, "description": "ALL이 기본" }
        ],
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/UserOrderItem" } } } } },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/user/cart": {
      "get": {
        "tags": ["User"],
        "summary": "장바구니",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "type": "object", "properties": { "items": { "type": "array" } } } } } },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/user/update": {
      "patch": {
        "tags": ["User"],
        "summary": "이메일/비밀번호 변경 (비밀번호 변경 시 currentPassword 필수)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "currentPassword": { "type": "string" },
                  "newPassword": { "type": "string", "minLength": 6 }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "success: true" },
          "400": { "description": "유효성 오류" },
          "401": { "description": "current password incorrect" },
          "409": { "description": "email already in use" }
        }
      }
    },
    "/api/user/settings": {
      "patch": {
        "tags": ["User"],
        "summary": "알림·마케팅 수신 설정",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "notificationEnabled": { "type": "boolean" },
                  "marketingConsent": { "type": "boolean" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "성공" },
          "400": { "description": "provide notificationEnabled and/or marketingConsent" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/admin/users": {
      "get": {
        "tags": ["Admin"],
        "summary": "회원 목록",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/AdminUser" } } } } },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      }
    },
    "/api/admin/users/{id}": {
      "delete": {
        "tags": ["Admin"],
        "summary": "유저 삭제 (ADMIN 삭제 불가)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "204": { "description": "삭제 완료" },
          "403": { "description": "cannot delete admin" },
          "404": { "description": "user not found" }
        }
      }
    },
    "/api/admin/orders": {
      "get": {
        "tags": ["Admin"],
        "summary": "주문 목록",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "status", "in": "query", "schema": { "type": "string", "enum": ["WAITING", "PREPARING", "PICKUP_READY", "COMPLETED", "CANCELED"] } }
        ],
        "responses": {
          "200": { "description": "성공" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      }
    },
    "/api/admin/orders/{id}": {
      "patch": {
        "tags": ["Admin"],
        "summary": "주문 상태 변경",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": { "status": { "type": "string", "enum": ["WAITING", "PREPARING", "PICKUP_READY", "COMPLETED", "CANCELED"] } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "성공" },
          "400": { "description": "invalid status" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      }
    },
    "/api/admin/products": {
      "get": {
        "tags": ["Admin"],
        "summary": "메뉴(상품) 목록",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "성공" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      },
      "post": {
        "tags": ["Admin"],
        "summary": "메뉴 등록",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["categoryId", "name", "basePrice"],
                "properties": {
                  "categoryId": { "type": "string" },
                  "name": { "type": "string" },
                  "englishName": { "type": "string" },
                  "description": { "type": "string" },
                  "basePrice": { "type": "number" },
                  "imageUrl": { "type": "string" },
                  "ingredients": { "type": "string" },
                  "calories": { "type": "string" },
                  "isAvailable": { "type": "boolean" },
                  "sortOrder": { "type": "number" },
                  "isBest": { "type": "boolean" },
                  "defaultShotCount": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "등록 성공" },
          "400": { "description": "categoryId, name, basePrice required" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      }
    },
    "/api/admin/products/{id}": {
      "patch": {
        "tags": ["Admin"],
        "summary": "메뉴 수정",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "categoryId": { "type": "string" },
                  "name": { "type": "string" },
                  "englishName": { "type": "string" },
                  "description": { "type": "string" },
                  "basePrice": { "type": "number" },
                  "imageUrl": { "type": "string" },
                  "ingredients": { "type": "string" },
                  "calories": { "type": "string" },
                  "isAvailable": { "type": "boolean" },
                  "sortOrder": { "type": "number" },
                  "isBest": { "type": "boolean" },
                  "defaultShotCount": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "성공" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      }
    },
    "/api/admin/terms": {
      "get": {
        "tags": ["Admin"],
        "summary": "약관 조회",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "type": "object", "properties": { "content": { "type": "string" } } } } } },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      },
      "put": {
        "tags": ["Admin"],
        "summary": "약관 수정",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": { "content": { "type": "string" } } }
            }
          }
        },
        "responses": {
          "200": { "description": "성공" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      }
    },
    "/api/admin/privacy": {
      "get": {
        "tags": ["Admin"],
        "summary": "개인정보처리방침 조회",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "성공" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      },
      "put": {
        "tags": ["Admin"],
        "summary": "개인정보처리방침 수정",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": { "content": { "type": "string" } } }
            }
          }
        },
        "responses": {
          "200": { "description": "성공" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Admin only" }
        }
      }
    },
    "/api/categories": {
      "get": {
        "tags": ["Categories"],
        "summary": "활성 카테고리 목록",
        "responses": {
          "200": { "description": "성공", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Category" } } } } }
        }
      },
      "post": {
        "tags": ["Categories"],
        "summary": "카테고리 등록",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string" },
                  "isActive": { "type": "boolean" },
                  "sortOrder": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "등록 성공" },
          "400": { "description": "name required" }
        }
      }
    },
    "/api/categories/{id}": {
      "patch": {
        "tags": ["Categories"],
        "summary": "카테고리 수정",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "isActive": { "type": "boolean" },
                  "sortOrder": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "성공" } }
      },
      "delete": {
        "tags": ["Categories"],
        "summary": "카테고리 삭제",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "204": { "description": "삭제 완료" } }
      }
    },
    "/api/menu": {
      "get": {
        "tags": ["Menu"],
        "summary": "메뉴 목록 (선택: categoryId)",
        "parameters": [{ "name": "categoryId", "in": "query", "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "성공 (MenuItem 형태)" }
        }
      },
      "post": {
        "tags": ["Menu"],
        "summary": "상품 등록 (백오피스)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["categoryId", "name", "basePrice"],
                "properties": {
                  "categoryId": { "type": "string" },
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "basePrice": { "type": "number" },
                  "isSoldOut": { "type": "boolean" },
                  "sortOrder": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "등록 성공" },
          "400": { "description": "categoryId, name, basePrice required" }
        }
      }
    },
    "/api/menu/{id}": {
      "get": {
        "tags": ["Menu"],
        "summary": "메뉴 상세",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "성공" },
          "404": { "description": "Not found" }
        }
      },
      "patch": {
        "tags": ["Menu"],
        "summary": "메뉴 수정",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "basePrice": { "type": "number" },
                  "isSoldOut": { "type": "boolean" },
                  "sortOrder": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "성공" } }
      },
      "delete": {
        "tags": ["Menu"],
        "summary": "메뉴 삭제",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "204": { "description": "삭제 완료" } }
      }
    },
    "/api/menu-board": {
      "get": {
        "tags": ["MenuBoard"],
        "summary": "메뉴판 (키오스크용: 카테고리+상품+옵션)",
        "responses": {
          "200": { "description": "성공 (categories[].products[].options)" }
        }
      }
    },
    "/api/orders": {
      "post": {
        "tags": ["Orders"],
        "summary": "주문 생성 (키오스크)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["totalPrice", "items"],
                "properties": {
                  "totalPrice": { "type": "number" },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["productId", "quantity"],
                      "properties": {
                        "productId": { "type": "string" },
                        "quantity": { "type": "number", "minimum": 1 },
                        "optionIds": { "type": "array", "items": { "type": "string" } }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "주문 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "orderNumber": { "type": "string" },
                    "orderNo": { "type": "number" },
                    "orderId": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "유효성 오류 (INVALID_TOTAL_PRICE, ITEMS_REQUIRED 등)" }
        }
      },
      "get": {
        "tags": ["Orders"],
        "summary": "주문 목록 (status 필터)",
        "parameters": [
          { "name": "status", "in": "query", "schema": { "type": "string", "enum": ["WAITING", "PREPARING", "PICKUP_READY", "COMPLETED", "CANCELED"] } }
        ],
        "responses": {
          "200": { "description": "성공" }
        }
      }
    },
    "/api/orders/{id}/status": {
      "patch": {
        "tags": ["Orders"],
        "summary": "주문 상태 변경",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": { "status": { "type": "string", "enum": ["WAITING", "PREPARING", "PICKUP_READY", "COMPLETED", "CANCELED"] } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "성공" },
          "400": { "description": "invalid status" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "로그인 응답의 token 값"
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": { "ok": { "type": "boolean" }, "db": { "type": "string" } }
      },
